@model List<ds_proekt.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

@if (Model == null || !Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Parfume ID</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                foreach (var item in order.Items)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.UserId</td>
                        <td>@item.ParfumeId</td>
                        <td>@item.Quantity</td>
                        <td>@order.TotalPrice.ToString("C")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
