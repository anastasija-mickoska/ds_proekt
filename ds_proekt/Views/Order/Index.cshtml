@using ds_proekt.Models
@model object

@{
    ViewData["Title"] = "Orders";

    bool isAdmin = ViewData["UserRole"]?.ToString() == "admin";

    List<Order> orderList = new();

    if (isAdmin && Model is List<Order> adminOrders)
    {
        orderList = adminOrders;
    }
    else if (!isAdmin && Model is Order userOrder && userOrder != null)
    {
        orderList.Add(userOrder);
    }
}

@if(isAdmin)
{
    <h2>Orders</h2>
}
else {
    <h2>Cart</h2>
}


@if (!orderList.Any())
{
    <p>No items found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Parfume ID</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in orderList)
            {
                if (order.Items != null)
                {
                    foreach (var item in order.Items)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.UserId</td>
                            <td>@item.ParfumeId</td>
                            <td>@item.Quantity</td>
                            <td>@order.TotalPrice.ToString("C")</td>
                            <td>@(order.OrderDate?.ToString("g") ?? "In Progress")</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

    @if (!isAdmin)
    {
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
    }
}
